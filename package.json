{
  "name": "taskia-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "TaskIA Platform - Monorepo com Turborepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm exec turbo run dev",
    "build": "pnpm exec turbo run build",
    "test": "pnpm exec turbo run test",
    "lint": "pnpm exec turbo run lint",
    "clean": "pnpm exec turbo run clean && rimraf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "dev:landing": "pnpm exec turbo run dev --filter=@taskia/landing",
    "dev:dashboard": "pnpm exec turbo run dev --filter=@taskia/dashboard",
    "build:landing": "pnpm exec turbo run build --filter=@taskia/landing",
    "build:dashboard": "pnpm exec turbo run build --filter=@taskia/dashboard",
    "graph": "pnpm exec turbo run build --graph=dependency-graph.html"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.29.2"
}
